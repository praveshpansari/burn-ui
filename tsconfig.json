{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "lib": [
      "dom",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
      "vite/client"
    ],
    "noEmit": true,
    "isolatedModules": true
  }
}